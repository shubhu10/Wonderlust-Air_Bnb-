<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-md-8 offset-2">

            <h2>Edit Your Listing</h2>
            <form  method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3">
                     <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" id="" value="<%=listing.title%>" class="form-control" required>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>
               
                <div class="mb-3">
                     <label for="description" class="form-lable">Description</label>
                     <textarea name="listing[description]" id="" cols="22" class="form-control" required><%=listing.description%></textarea>
                     <div class="invalid-feedback">Description should be valid</div>
                     </div>
                
                
                <div class="mb-3">
                     <label for="image" class="form-lable">Image</label>
                     <input type="text" name="listing[image]" id="" value="<%=listing.image%>" class="form-control" required>
                     </div>
                <div class="row">
                    <div class="col-4">
                        <div class="mb-3">
                            <label for="price" class="form-lable">Price</label> 
                            <input type="number" name="listing[price]" id=""value="<%=listing.price%>" class="form-control" required>
                            <div class="invalid-feedback">Price should be valid</div>
                           </div>
                    </div>
                    <div class="col-8">
                        <div class="mb-3">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" name="listing[country]" id="" value="<%=listing.country%>" class="form-control" required>
                            <div class="invalid-feedback">Country name should be valid</div>
                           </div>
                    </div>     
                </div>
             <div class="mb-3">
                     <label for="location" class="form-lable">Location</label>
                     <input type="text" name="listing[location]" id="" value="<%=listing.location%>" class="form-control" required>
                     <div class="invalid-feedback">Location should be valid</div>

                     </div>
               
               
        
                <button class="btn btn-dark edit-btn mt-3">submit</button>
            </form>
        </div>
       
    </div>

</body>
