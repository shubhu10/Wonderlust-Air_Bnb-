<% layout("/layouts/boilerplate")  %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
    <h3>Create a New Listings</h3>
    
    <form action="/listings" method="POST">
        <div class="mb-3"><label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" id="" placeholder="add a catchy title" class="form-control">
        </div>
        
        <div class="mb-3"><label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" id="" class="form-control"></textarea>
           
        </div>
        
        <div class="mb-3"><label for="image" class="form-lable">Image</label>
            <input type="text" name="listing[image]" id="" placeholder="enter image URL/Link" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col--md-4"><label for="price" class="form-lable">Price</label>
                <input type="number" name="listing[price]" id="" placeholder="1200" class="form-control">
            </div>
           
            <div class="mb-3 col-md-8"><label for="country" class="form-lable">Country</label>
                <input type="text" name="listing[country]" id="" placeholder="India" class="form-control">
            </div>
        </div>
       
      
        
        <div class="mb-3"><label for="location" class="form-lable">Location</label>
            <input type="text" name="listing[location]" id="" placeholder="Jaipur , Rajasthan" class="form-control">
        </div>
        
        <br><br>

        <button class="btn add-btn">submit</button>
    </form>
    <br><br>
</div>
</div>
</body>
